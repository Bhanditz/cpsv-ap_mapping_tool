<?php

function mapping_menu() {

	$items['mappings'] = array(
		'title' => 'mapping',
		'page callback' => 'drupal_get_form',
		'page arguments' => array('mapping_basic'),
		'access callback' => TRUE,
	);
	return $items;
}


